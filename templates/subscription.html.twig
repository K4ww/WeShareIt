
{% extends 'base.html.twig' %}

{% block title %}Subscription Page{% endblock %}

{% block body %}
<h1 class="text-center my-4">Subscribe</h1>
<form class="mx-auto" style="max-width: 400px;" id="subscriptionForm">
    <div class="mb-3">
        <label for="name" class="form-label">Full Name</label>
        <input type="text" class="form-control" id="name" placeholder="Enter your full name" required>
    </div>
    <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input type="text" class="form-control" id="username" placeholder="Choose a username" required>
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" placeholder="Create a password" required>
    </div>
    <div class="mb-3">
        <label for="confirmPassword" class="form-label">Confirm Password</label>
        <input type="password" class="form-control" id="confirmPassword" placeholder="Re-enter your password" required>
    </div>
    <div class="mb-3">
        <label for="university" class="form-label">Universit√©</label>
        <select class="form-select" id="university" required>
            <option value="" disabled selected>Select your university</option>
            <option value="1">University A</option>
            <option value="University B">University B</option>
            <option value="University C">University C</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="level" class="form-label">Niveau</label>
        <select class="form-select" id="level" required>
            <option value="" disabled selected>Select your level</option>
            <option value="1">CIM</option>
            <option value="Master 2">Master 2</option>
            <option value="PhD">PhD</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="modules" class="form-label">Modules</label>
        <div id="modules" class="d-flex flex-wrap gap-2">
            <button type="button" class="btn btn-outline-primary module-btn" data-module="1">Module 1</button>
            <button type="button" class="btn btn-outline-primary module-btn" data-module="Module 2">Module 2</button>
            <button type="button" class="btn btn-outline-primary module-btn" data-module="Module 3">Module 3</button>
            <button type="button" class="btn btn-outline-primary module-btn" data-module="Module 4">Module 4</button>
        </div>
        <input type="hidden" id="selectedModule" name="selectedModule" required>
    </div>
    <button type="submit" class="btn btn-success w-100">Subscribe</button>
</form>
<script src="{{ asset('js/subscribe.js') }}" defer></script>
{% endblock %}

